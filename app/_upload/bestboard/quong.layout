	BUTTON ( TEXT "?" SECOND ( TEXT "…" )
		ERASESPACE AROUND AUTOSPACE AFTER AUTOCAPS ON)
	BUTTON ( TEXT "!" SECOND ( TIME )
		ERASESPACE AROUND AUTOSPACE AFTER AUTOCAPS ON)
DL
